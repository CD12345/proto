<Window x:Class="PlanetSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Planet Simulation" Height="450" Width="800">
    <Grid x:Name="RootGrid">
        <StackPanel x:Name="StartPanel" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button x:Name="StartButton" Content="Start" Width="100" Margin="5" Click="StartButton_Click"/>
            <Button Content="Close" Width="100" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
