<Window x:Class="FloatPointerExporter.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Vector" Height="150" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="File:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
        <TextBox x:Name="filePathBox" Grid.Row="0" Grid.Column="1" />
        <Button Content="Browse" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Click="Browse_Click" />

        <TextBlock Text="Point Count:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,0" />
        <TextBox x:Name="countBox" Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5,0" IsDefault="True" Click="Ok_Click" />
            <Button Content="Cancel" Width="75" Margin="5,0" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
